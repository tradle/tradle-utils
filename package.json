{
  "name": "tradle-utils",
  "version": "0.0.1",
  "description": "common utility functions for tradle components",
  "main": "index.js",
  "scripts": {
    "postinstall": "npm install -g js-beautify jshint && npm install --save-dev tradle-style pre-commit tape",
    "jsbeautify": "js-beautify --config=node_modules/tradle-style/.jsbeautifyrc -r -f *.js",
    "jshint": "jshint . -c node_modules/tradle-style/.jshintrc --exclude-path .gitignore"
  },
  "pre-commit": [
    "jsbeautify",
    "jshint"
  ],
  "bugs": {
    "url": "https://github.com/tradle/tradle-utils/issues"
  },
  "homepage": "https://github.com/tradle/tradle-utils",
  "keywords": [
    "tradle",
    "bitcoin",
    "tradenet"
  ],
  "license": "MIT",
  "dependencies": {
    "create-torrent": "^3.5.1",
    "defaults": "^1.0.0",
    "mkdirp": "^0.5.0",
    "parse-torrent": "^3.0.0"
  },
  "devDependencies": {
    "pre-commit": "0.0.11",
    "tape": "^3.4.0",
    "tradle-style": "0.0.1",
    "which": "^1.0.8"
  }
}
